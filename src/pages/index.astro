---
import Layout from '../layouts/Layout.astro';
---

<Layout title="BDL PORTAL">
  <div class="bg-[#373A36] min-h-screen text-white font-avenir flex flex-col items-center justify-center px-8 relative overflow-hidden">
    
    <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-blue-900/10 blur-[120px] rounded-full"></div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-red-900/10 blur-[120px] rounded-full"></div>

    <header class="mb-16 text-center relative z-10">
      <h1 class="text-4xl font-black uppercase tracking-[0.4em] mb-3 italic">BDL CARDS</h1>
      <p class="text-gray-500 text-[11px] font-bold tracking-[0.6em] uppercase">Select League</p>
    </header>

    <div class="grid grid-cols-1 gap-6 w-full max-w-sm relative z-10">
      
      <a href="/nba-home" class="group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.03] p-8 transition-all active:scale-95 shadow-2xl backdrop-blur-sm hover:border-white/20">
        <div class="flex items-center justify-between relative z-10">
          <div>
            <span class="text-blue-500 text-[10px] font-black uppercase tracking-widest block mb-1">United States of America</span>
            <h2 class="text-3xl font-black tracking-tighter italic">NBA</h2>
          </div>
          <div class="bg-white/5 p-4 rounded-full group-hover:bg-[#CE1141] transition-all duration-300 group-hover:rotate-[-45deg]">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
      </a>

      <a href="/b1-home" class="group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.03] p-8 transition-all active:scale-95 shadow-2xl backdrop-blur-sm hover:border-white/20">
        <div class="flex items-center justify-between relative z-10">
          <div>
            <span class="text-cyan-500 text-[10px] font-black uppercase tracking-widest block mb-1">Japan Professional B1</span>
            <h2 class="text-3xl font-black tracking-tighter italic">B1 LEAGUE</h2>
          </div>
          <div class="bg-white/5 p-4 rounded-full group-hover:bg-cyan-600 transition-all duration-300 group-hover:rotate-[-45deg]">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-r from-cyan-600/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
      </a>

      <a href="/b2-home" class="group relative overflow-hidden rounded-2xl border border-white/5 bg-white/[0.03] p-8 transition-all active:scale-95 shadow-2xl backdrop-blur-sm hover:border-white/20">
        <div class="flex items-center justify-between relative z-10">
          <div>
            <span class="text-orange-500 text-[10px] font-black uppercase tracking-widest block mb-1">Japan Professional B2</span>
            <h2 class="text-3xl font-black tracking-tighter italic">B2 LEAGUE</h2>
          </div>
          <div class="bg-white/5 p-4 rounded-full group-hover:bg-orange-600 transition-all duration-300 group-hover:rotate-[-45deg]">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
            </svg>
          </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-r from-orange-600/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
      </a>

    </div>

    <footer class="mt-20 opacity-20 text-center">
      <p class="text-[9px] font-bold tracking-[0.4em] uppercase">B-Data Lab Ecosystem</p>
    </footer>
  </div>
</Layout>